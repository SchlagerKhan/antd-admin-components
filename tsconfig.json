{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"sourceMap": true,
		"outDir": "./lib",
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"baseUrl": ".",
		"paths": {
			"*": ["./*", "./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "lib", "**/*.stories.tsx", "**/*.story.tsx"]
}
